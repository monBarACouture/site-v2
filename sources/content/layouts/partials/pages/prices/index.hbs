{{#*inline "title"}}
	<header>{{> @partial-block}}</header>
{{/inline}}

{{#*inline "list-title"}}
	{{#if (existy link)}}
		<a id="{{link}}"></a>
		{{#> title}}
			<a href="pages/services#{{link}}">{{title}}</a>
		{{/title}}
	{{else}}
		{{#> title}}
			{{title}}
		{{/title}}
	{{/if}}
{{/inline}}

{{#*inline "price"}}
	<table class="price-table">
		<tbody>
			<tr>
				<td class="left">
					{{#if (existy title)}}
						{{#> title}}{{title}}{{/title}}
					{{else}}
						{{item}}
					{{/if}}
				</td>
				<td class="center"><hr></td>
				<td class="right">{{price}} â‚¬</td>
			</tr>
		</tbody>
	</table>
{{/inline}}

{{#*inline "price-list"}}
	<ul class="price-list" data-depth="{{depth}}">
	{{#each list}}
		<li>
			{{#if (existy list)}}
				{{> list-title}}
				{{> price-list depth=(inc ../depth)}}
			{{/if}}
			{{#if (existy price)}}
				{{> price}}
			{{/if}}
			{{#if (existy description)}}
				{{#> title}}{{title}}{{/title}}
				<p>{{description}}</p>
			{{/if}}
		</li>
	{{/each}}
	</ul>
{{/inline}}

<section id="intro" class="content">
	<div class="row columns">
		{{> price-list prices depth=0}}
	</div>
</section>
